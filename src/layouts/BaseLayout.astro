---
import '../styles/global.css';
import SEOHead from '../components/seo/SEOHead.astro';
import JsonLd from '../components/seo/JsonLd.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  canonical?: string;
  noindex?: boolean;
}

const props = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <SEOHead {...props} />

    <JsonLd
      schema={[
        { type: 'WebSite' },
        { type: 'Organization' },
      ]}
    />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <slot name="head" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-pink-600 focus:text-white focus:px-4 focus:py-2 focus:rounded"
    >
      Saltar al contenido principal
    </a>

    <header class="sticky top-0 z-40 w-full border-b border-gray-200 bg-white/95 backdrop-blur">
      <nav class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-pink-600">
          <span>HallyuLatino</span>
        </a>

        <ul class="hidden items-center gap-6 md:flex">
          <li>
            <a href="/dramas" class="text-gray-600 hover:text-pink-600 transition-colors">
              K-Dramas
            </a>
          </li>
          <li>
            <a href="/kpop" class="text-gray-600 hover:text-pink-600 transition-colors">
              K-Pop
            </a>
          </li>
          <li>
            <a href="/noticias" class="text-gray-600 hover:text-pink-600 transition-colors">
              Noticias
            </a>
          </li>
          <li>
            <a href="/guias" class="text-gray-600 hover:text-pink-600 transition-colors">
              Guías
            </a>
          </li>
        </ul>

        <!-- Mobile menu button -->
        <button
          type="button"
          class="md:hidden p-2 text-gray-600"
          aria-label="Abrir menú"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>

      <!-- Mobile menu -->
      <div class="hidden md:hidden" id="mobile-menu">
        <ul class="space-y-1 px-4 pb-4">
          <li>
            <a href="/dramas" class="block py-2 text-gray-600 hover:text-pink-600">K-Dramas</a>
          </li>
          <li>
            <a href="/kpop" class="block py-2 text-gray-600 hover:text-pink-600">K-Pop</a>
          </li>
          <li>
            <a href="/noticias" class="block py-2 text-gray-600 hover:text-pink-600">Noticias</a>
          </li>
          <li>
            <a href="/guias" class="block py-2 text-gray-600 hover:text-pink-600">Guías</a>
          </li>
        </ul>
      </div>
    </header>

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-gray-200 bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">HallyuLatino</h3>
            <p class="mt-2 text-sm text-gray-600">
              Tu fuente de información sobre K-Dramas, K-Pop y cultura coreana en español.
            </p>
          </div>

          <div>
            <h4 class="font-semibold text-gray-900">Contenido</h4>
            <ul class="mt-2 space-y-2 text-sm">
              <li><a href="/dramas" class="text-gray-600 hover:text-pink-600">K-Dramas</a></li>
              <li><a href="/kpop" class="text-gray-600 hover:text-pink-600">K-Pop</a></li>
              <li><a href="/noticias" class="text-gray-600 hover:text-pink-600">Noticias</a></li>
              <li><a href="/guias" class="text-gray-600 hover:text-pink-600">Guías</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold text-gray-900">Legal</h4>
            <ul class="mt-2 space-y-2 text-sm">
              <li><a href="/privacidad" class="text-gray-600 hover:text-pink-600">Política de Privacidad</a></li>
              <li><a href="/terminos" class="text-gray-600 hover:text-pink-600">Términos de Uso</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold text-gray-900">Síguenos</h4>
            <div class="mt-2 flex gap-4">
              <a href="https://twitter.com/hallyulatino" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-pink-600" aria-label="Twitter">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              </a>
              <a href="https://instagram.com/hallyulatino" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-pink-600" aria-label="Instagram">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <div class="mt-8 border-t border-gray-200 pt-8 text-center text-sm text-gray-600">
          <p>&copy; {new Date().getFullYear()} HallyuLatino. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>

    <script>
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
