---
import BaseLayout from './BaseLayout.astro';
import JsonLd from '../components/seo/JsonLd.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  heroImageAlt?: string;
  author?: string;
  tags?: string[];
  breadcrumbs?: Array<{ name: string; url: string }>;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  heroImageAlt = title,
  author = 'HallyuLatino',
  tags = [],
  breadcrumbs = [],
} = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('es-419', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('es-419', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage}
  imageAlt={heroImageAlt}
  type="article"
  publishedTime={pubDate}
  modifiedTime={updatedDate}
  author={author}
>
  <Fragment slot="head">
    <JsonLd
      schema={[
        {
          type: 'Article',
          headline: title,
          description,
          image: heroImage,
          datePublished: pubDate,
          dateModified: updatedDate,
          author,
        },
        {
          type: 'BreadcrumbList',
          items: [
            { name: 'Inicio', url: '/' },
            ...breadcrumbs,
            { name: title, url: Astro.url.pathname },
          ],
        },
      ]}
    />
  </Fragment>

  <article class="mx-auto max-w-4xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Breadcrumbs -->
    {breadcrumbs.length > 0 && (
      <nav aria-label="Breadcrumb" class="mb-6">
        <ol class="flex flex-wrap items-center gap-2 text-sm text-gray-600">
          <li>
            <a href="/" class="hover:text-pink-600">Inicio</a>
          </li>
          {breadcrumbs.map((crumb) => (
            <li class="flex items-center gap-2">
              <span>/</span>
              <a href={crumb.url} class="hover:text-pink-600">{crumb.name}</a>
            </li>
          ))}
          <li class="flex items-center gap-2">
            <span>/</span>
            <span class="text-gray-400" aria-current="page">{title}</span>
          </li>
        </ol>
      </nav>
    )}

    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl lg:text-5xl">
        {title}
      </h1>

      <div class="mt-4 flex flex-wrap items-center gap-4 text-sm text-gray-600">
        <span>Por {author}</span>
        <span>•</span>
        <time datetime={pubDate.toISOString()}>{formattedPubDate}</time>
        {updatedDate && (
          <>
            <span>•</span>
            <span>Actualizado: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time></span>
          </>
        )}
      </div>

      {tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="inline-flex items-center rounded-full bg-pink-100 px-3 py-1 text-sm font-medium text-pink-800">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Hero Image -->
    {heroImage && (
      <figure class="mb-8">
        <img
          src={heroImage}
          alt={heroImageAlt}
          class="w-full rounded-lg object-cover shadow-lg"
          loading="eager"
          decoding="async"
        />
      </figure>
    )}

    <!-- Content -->
    <div class="prose prose-lg prose-pink mx-auto max-w-none">
      <slot />
    </div>

    <!-- Tags footer -->
    {tags.length > 0 && (
      <footer class="mt-12 border-t border-gray-200 pt-8">
        <h2 class="text-lg font-semibold text-gray-900">Etiquetas</h2>
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              href={`/etiquetas/${tag.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-flex items-center rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-800 hover:bg-pink-100 hover:text-pink-800 transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      </footer>
    )}
  </article>
</BaseLayout>
