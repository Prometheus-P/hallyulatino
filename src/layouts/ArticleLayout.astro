---
import BaseLayout from './BaseLayout.astro';
import JsonLd from '../components/seo/JsonLd.astro';
import ShareButtons from '../components/ui/ShareButtons.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  heroImageAlt?: string;
  author?: string;
  tags?: string[];
  breadcrumbs?: Array<{ name: string; url: string }>;
  contentType?: 'dramas' | 'kpop' | 'noticias' | 'guias';
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  heroImageAlt = title,
  author = 'OndaCoreana',
  tags = [],
  breadcrumbs = [],
  contentType,
} = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('es-419', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('es-419', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage}
  imageAlt={heroImageAlt}
  type="article"
  publishedTime={pubDate}
  modifiedTime={updatedDate}
  author={author}
>
  <Fragment slot="head">
    <JsonLd
      schema={[
        {
          type: 'Article',
          headline: title,
          description,
          image: heroImage,
          datePublished: pubDate,
          dateModified: updatedDate,
          author,
        },
        {
          type: 'BreadcrumbList',
          items: [
            { name: 'Inicio', url: '/' },
            ...breadcrumbs,
            { name: title, url: Astro.url.pathname },
          ],
        },
      ]}
    />
  </Fragment>

  <article class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8" style="padding-top: var(--md-sys-spacing-3xl); padding-bottom: var(--md-sys-spacing-3xl);" data-pagefind-body>
    <!-- Breadcrumbs -->
    {breadcrumbs.length > 0 && (
      <nav aria-label="Breadcrumb" style="margin-bottom: var(--md-sys-spacing-lg);">
        <ol class="flex flex-wrap items-center text-sm" style="gap: var(--md-sys-spacing-sm); color: var(--md-sys-color-on-surface-variant);">
          <li>
            <a href="/">Inicio</a>
          </li>
          {breadcrumbs.map((crumb) => (
            <li class="flex items-center" style="gap: var(--md-sys-spacing-sm);">
              <span>/</span>
              <a href={crumb.url}>{crumb.name}</a>
            </li>
          ))}
          <li class="flex items-center" style="gap: var(--md-sys-spacing-sm);">
            <span>/</span>
            <span style="opacity: 0.6;" aria-current="page">{title}</span>
          </li>
        </ol>
      </nav>
    )}

    <!-- Header -->
    <header style="margin-bottom: var(--md-sys-spacing-2xl);">
      <h1 class="text-3xl font-bold sm:text-4xl lg:text-5xl" style="color: var(--md-sys-color-on-surface);" data-pagefind-meta="title">
        {title}
      </h1>
      <span data-pagefind-meta="description" class="hidden">{description}</span>
      <span data-pagefind-meta="pubDate" class="hidden">{pubDate.toISOString()}</span>
      {contentType && <span data-pagefind-meta="contentType" data-pagefind-filter="contentType" class="hidden">{contentType}</span>}
      {heroImage && <span data-pagefind-meta="heroImage" class="hidden">{heroImage}</span>}

      <div class="flex flex-wrap items-center text-sm" style="margin-top: var(--md-sys-spacing-md); gap: var(--md-sys-spacing-md); color: var(--md-sys-color-on-surface-variant);">
        <span>Por {author}</span>
        <span>•</span>
        <time datetime={pubDate.toISOString()}>{formattedPubDate}</time>
        {updatedDate && (
          <>
            <span>•</span>
            <span>Actualizado: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time></span>
          </>
        )}
      </div>

      <!-- Share Buttons -->
      <div style="margin-top: var(--md-sys-spacing-md);">
        <ShareButtons
          title={title}
          url={`https://ondacoreana.com${Astro.url.pathname}`}
          description={description}
        />
      </div>

      {tags.length > 0 && (
        <div class="flex flex-wrap" style="margin-top: var(--md-sys-spacing-md); gap: var(--md-sys-spacing-sm);">
          {tags.map((tag) => (
            <span class="inline-flex items-center text-sm font-medium" style="border-radius: var(--md-sys-shape-corner-full); background-color: var(--md-sys-color-primary-container); color: var(--md-sys-color-on-primary-container); padding: var(--md-sys-spacing-xs) var(--md-sys-spacing-md);">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Hero Image -->
    {heroImage && (
      <figure style="margin-bottom: var(--md-sys-spacing-2xl);">
        <img
          src={heroImage}
          alt={heroImageAlt}
          class="w-full object-cover"
          style="border-radius: var(--md-sys-shape-corner-large); box-shadow: var(--md-sys-elevation-level2);"
          loading="eager"
          decoding="async"
        />
      </figure>
    )}

    <!-- Content -->
    <div class="prose prose-lg prose-pink mx-auto max-w-none" style="color: var(--md-sys-color-on-surface);">
      <slot />
    </div>

    <!-- Tags footer -->
    {tags.length > 0 && (
      <footer class="border-t" style="margin-top: var(--md-sys-spacing-3xl); border-color: var(--md-sys-color-outline-variant); padding-top: var(--md-sys-spacing-2xl);">
        <h2 class="text-lg font-semibold" style="color: var(--md-sys-color-on-surface);">Etiquetas</h2>
        <div class="flex flex-wrap" style="margin-top: var(--md-sys-spacing-md); gap: var(--md-sys-spacing-sm);">
          {tags.map((tag) => (
            <a
              href={`/etiquetas/${tag.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-flex items-center text-sm font-medium"
              style="border-radius: var(--md-sys-shape-corner-full); background-color: var(--md-sys-color-surface-variant); color: var(--md-sys-color-on-surface-variant); padding: var(--md-sys-spacing-sm) var(--md-sys-spacing-md); transition: background-color var(--md-sys-motion-duration-short4) var(--md-sys-motion-easing-standard);"
            >
              #{tag}
            </a>
          ))}
        </div>
      </footer>
    )}
  </article>
</BaseLayout>
