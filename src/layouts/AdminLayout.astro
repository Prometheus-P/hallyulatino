---
const { title = 'OndaCoreana Admin', breadcrumbs = [] } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --bg: #0b1021;
        --card: #121a30;
        --accent: #9b87f5;
        --accent-2: #5dd39e;
        --text: #e8ecf5;
        --muted: #9ba3b5;
        --border: #1f2a44;
      }
      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        margin: 0;
        background: radial-gradient(circle at 20% 20%, #14203c 0, #0b1021 40%),
          radial-gradient(circle at 80% 0%, #1f2a44 0, #0b1021 35%),
          #0b1021;
        color: var(--text);
        min-height: 100vh;
      }
      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px 24px;
        border-bottom: 1px solid var(--border);
        position: sticky;
        top: 0;
        backdrop-filter: blur(6px);
      }
      nav a {
        color: var(--muted);
        margin-right: 16px;
        text-decoration: none;
        font-weight: 600;
      }
      nav a.active {
        color: var(--accent);
      }
      main {
        padding: 24px;
        max-width: 1200px;
        margin: 0 auto;
      }
      .crumbs {
        font-size: 12px;
        color: var(--muted);
        margin-bottom: 8px;
      }
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
      }
    </style>
  </head>
  <body>
    <header>
      <div>
        <strong>OndaCoreana Admin</strong>
      </div>
      <nav>
        <a href="/admin" class="active">Inicio</a>
        <a href="/admin/features">Features</a>
      </nav>
    </header>
    <main>
      {breadcrumbs.length > 0 && (
        <div class="crumbs">
          {breadcrumbs.join(' / ')}
        </div>
      )}
      <slot />
    </main>
  </body>
</html>
